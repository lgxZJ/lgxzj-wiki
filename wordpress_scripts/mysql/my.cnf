[mysqld_safe]
basedir=/lgxzj-install/mysql
datadir=/lgxzj-install/mysql/data
tmpdir=/lgxzj-install/mysql/tmp

sql_require_primary_key=ON
sql_warnings=ON
core-file=ON

thread_handling=one-thread-per-connection
thread_pool_max_active_query_threads=0
thread_pool_max_unused_threads=0

have_profiling=YES
profiling=ON
profiling_history_size=50

interactive_timeout=28800
lock_wait_timeout=31536000

# necessary for supervisor to monitor
daemonize=OFF

log_bin=ON
log_bin_basename=/lgxzj-install/mysql/data/logs/mysql.binlog
log_bin_index=/lgxzj-install/mysql/data/logs/mysql.binglogidx

log_error_verbosity=2
log-error=/lgxzj-install/mysql/data/logs/mysql.error
log-short-format=OFF
log_output=FILE

general_log=ON
general_log_file=/lgxzj-install/mysql/data/logs/mysql.general

slow_query_log=ON
slow_query_log_file=/lgxzj-install/mysql/data/logs/mysql.slow
log_queries_not_using_indexes=ON
log_throttle_queries_not_using_indexes=0
log_slow_admin_statements=ON
log_slow_extra=ON
log_timestamps=UTC
long_query_time=5

max_connect_errors=100
max_connections=300
max_error_count=1024
max_execution_time=0
max_user_connections=0

net_read_timeout=30
net_write_timeout=60
net_retry_count=10

bind-address=*
port=3306
socket=/lgxzj-install/mysql/data/mysql.sock
pid_file=/lgxzj-install/mysql/data/mysql.pid

skip-host-cache
skip-show-database
skip-symbolic-links

autocommit=1
transaction-isolation=REPEATABLE-READ
transaction-read-only=OFF

upgrade=NONE
check_proxy_users=OFF

user=lgxzj-mysql

character_set_client=utf8mb4
character_set_connection=utf8mb4
character_set_database=utf8mb4
character-set-filesystem=binary
character_set_results=utf8mb4
character_set_server=utf8mb4
collation_database=utf8mb4_0900_ai_ci
collation-server=utf8mb4_0900_ai_ci

connect_timeout=10
disconnect_on_expired_password=ON
foreign_key_checks=ON

default-storage-engine=InnoDB
default-tmp-storage-engine=InnoDB
disabled_storage_engines=